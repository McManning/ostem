    <div class="description container">
        <div class="row">
            <div class="col s12 offset-m4 m8">
                <p class="editable flow-text" data-editable-id="extendedDescription">{{ editables.extendedDescription }}</p>
            </div>
        </div>
    </div>

    <!-- Mailing List Archives -->
    <div class="container">
        <div class="row">
            <div class="col m12">
                <h1><span class="hide-on-small-only">Recent</span> Updates</h1>
            </div>
        </div>
        <div class="row">
            <div class="col s12">
                <ul class="collection">
                    {% for mailing in mailings %}
                    <li class="collection-item avatar">
                        <a href="#news-modal-{{ mailing.date|date('U') }}" class="modal-trigger">
                            <i class="material-icons circle green">email</i>
                            <span class="title truncate">
                                {{ mailing.subject }}
                            </span>

                            <!--span class="secondary-content">
                                READ MORE
                            </span-->
                        </a>
                        
